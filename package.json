{
  "name": "advinha",
  "version": "1.0.0",
  "description": "Quem Ã© o Impostor? - Multiplayer word guessing game",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev -w @advinha/client",
    "dev:server": "npm run dev -w @advinha/server",
    "build": "npm run build -w @advinha/client && npm run build -w @advinha/server",
    "build:client": "npm run build -w @advinha/client",
    "build:server": "npm run build -w @advinha/server",
    "start": "npm run start -w @advinha/server",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
